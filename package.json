{
    "name": "my-portfolio",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
      "axios": "^1.7.6",
      "pm2": "^5.4.2",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-redux": "^8.1.3",
      "react-router-dom": "^6.25.1",
      "react-scripts": "^5.0.1",
      "redux": "^4.2.1",
      "redux-thunk": "^2.4.2",
      "serve": "^14.0.1"
    },
    "overrides": {
      "nth-check": "2.0.1",
      "postcss": "8.4.32"
    },
    "scripts": {
      "test": "react-scripts test",
      "eject": "react-scripts eject",
      "start": "react-scripts start",
      "dev": "concurrently \"npm start\" \"npm run server\"",
      "server": "npm run dev --prefix api",
      "build:client": "npm install && react-scripts build",
      "build:server": "cd api && npm install",
      "build": "npm run build:client && npm run build:server",
      "serve-client": "serve -s build -l 3000",
      "start:prod": "pm2-runtime start ecosystem.config.js --env production"
    },
    "browserslist": {
      "production": [
        ">0.2%",
        "not dead",
        "not op_mini all"
      ],
      "development": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
      ]
    },
    "proxy": "http://localhost:5000",
    "devDependencies": {
      "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
      "concurrently": "^5.3.0",
      "nodemon": "^3.1.4"
    }
  }
